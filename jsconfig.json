{
    "compilerOptions": {
        "target": "es2020",
        "module": "system",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "@/*":  ["src/*"],
            "@miui/*":  ["src/components/miui/*"],
            "@views/*":  ["src/views/*"],
            "@style/*":  ["src/style/*"],
            "@assets/*":  ["src/assets/*"],
            "~@miui/component-style/*":  ["src/style/miui/components/*"]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "public",
        "mock"
    ]
}